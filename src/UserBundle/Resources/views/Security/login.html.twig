{% extends "UserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="content">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path("fos_user_security_check") }}" method="post">
            <div class="line">
                <div class="champForm">
                    <label for="username">{{ 'security.login.username'|trans }}</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>
                <div class="champForm">
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input type="password" id="password" name="_password" required="required" />
                </div>
            </div>

            <div class="line">
                <div class="champForm">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'messages') }}</label>
                </div>
                <div class="champForm">
                    <a href="{{ path("fos_user_resetting_request") }}">{{ 'reset.password'|trans({}, 'messages') }}</a>
                </div>
            </div>


            <div class="line">
                <div class="champForm">
                    {{ 'no_account'|trans({}, 'messages') }}
                    <a href="{{ path("fos_user_registration_register") }}">{{ 'register'|trans({}, 'messages') }}</a>
                </div>
            </div>

            <div class="line">
                <div class="champForm">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                </div>
                <div class="champForm">
                    <div class="cta">
                        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    </div>
                </div>
            </div>

        </form>
    </div>

{% endblock fos_user_content %}
