{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
<div class="content">
    <h1>{{ 'cellar'|trans }} : <span class="red">{{ cellar.name }}</span></h1>

    <div class="cta">
        <a href="{{ path('bottle_new', {'cellar':cellar.id}) }}">+ {{ 'bottle.add'|trans }}</a>
    </div>
    <br><br><br><br><br>
    <div class="bottleList">
        {% for bottle in bottles %}
        <a href="{{ path('bottle_show', {'cellar':cellar.id,'id': bottle.id }) }}" class="myBottle">
            <img src="{{ asset('img/emplacement_pris.png') }}" />
            <div class="infoBottle">
               <p><span class="red">{{ bottle.name }}</span> - {{ bottle.vintage }}</p>
            </div>
        </a>
        {% endfor %}

        {% for i in bottles|length..cellar.maxBottles -1 %}
        {% if i%10 == 0 and i != 0%}
        </div>
        <div class="bottleList">
        {% endif %}
        <img src="{{ asset('img/emplacement_vide.png') }}" />

        {% endfor %}
        </div>

    <div class="line">
        <p class="back">
            <a href="{{ path('cellar_index') }}">{{ 'cellar.back_to_cellars'|trans }}</a>
        </p>
    </div>

</div>

{% endblock %}
