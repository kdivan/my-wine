{% extends 'base.html.twig' %}

{% block body %}
    <h1>Affiche la liste des blogs</h1>
    <table>
        <tr>
            <th>Titre</th><th>Contenu</th><th>Is published</th><th>Catgeory</th><th>slug</th>
        </tr>
    {% for p in posts %}
        {% if p.isPublished %}
            <tr class="published">
        {% else %}
            <tr class="notPublished">
        {% endif %}
            <td>{{ p.title }}</td><td>{{ p.body }}</td><td>{{ p.isPublished }}</td><td>{{ p.category.id }}</td><td>{{ p.slug }}</td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}

{% block stylesheets %}
    <style>
        .published { background: red; }
        .notPublished { background: blue; }
    </style>
{% endblock %}