{% extends 'AppBundle::layout.html.twig' %}


{% block body %}

<div class="content">
    <div id="presentation">
        <div id="gestion">
            <img src="{{ asset('img/gerer.png') }}" />
           <p><span class="red">Gérez</span> votre cave</p>
        </div>
        <div id="degustation">
            <img src="{{ asset('img/deguster.png') }}" />
            <p><span class="red">Dégustez</span> votre vin</p>
        </div>
        <div id="comparaison">
            <img src="{{ asset('img/stats.png') }}" />
            <p><span class="red">Comparez</span> vos biens</p>
        </div>
    </div>
</div>

    <div id="arguments">
        <div class="content">
            <div class="description">
                <div class="line">
                    <h2>Pourquoi choisir my<span class="red">Wine</span> ?</h2>
                </div>
