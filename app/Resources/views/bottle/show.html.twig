        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bottle_index', {'cellarId':cellarId}) }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bottle_edit', {'cellarId':cellarId, 'id': bottle.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
