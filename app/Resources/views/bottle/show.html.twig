{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <h1>Bottle</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bottle.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ bottle.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ bottle.description }}</td>
            </tr>
            <tr>
                <th>Vineyard</th>
                <td>{{ bottle.vineyard }}</td>
            </tr>
            <tr>
                <th>Winemaking</th>
                <td>{{ bottle.winemaking }}</td>
            </tr>
            <tr>
                <th>Buyingprice</th>
                <td>{{ bottle.buyingPrice }}</td>
