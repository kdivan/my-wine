{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <div class="content">
        <h1>My Bottle : <span class="red">{{ bottle.name }}</span></h1>

        {% if bottle.imageName is not null and file_exists(web_path~asset('images/bottles/' ~ bottle.imageName)) %}
        <div id="visuBouteille">
            <img width="auto" height="200" src="{{ asset('images/bottles/' ~ bottle.imageName) }}" />
        </div>
        {% endif %}

        <div id="infoBouteille">
            <div class="line">
                <h2 class="red">{{ bottle.name }}</h2>
            </div>
            <div class="line">
                <p>{{ bottle.vineyard }}</p>
                <p>{{ bottle.winemaking }}</p>
                <p>{{ bottle.buyingPrice }} {{ bottle.currency }}</p>
            </div>
            <div class="line">
                <p>{{ bottle.vintage }}</p>
                <p>{{ bottle.capacity }}</p>
                <p>{{ bottle.bottleType.label }}</p>
            </div>
            <div class="line">
                <p>{{ bottle.description }}</p>
            </div>
        </div>


        <div id="actionBouteille">
            <div class="cta">
                <a href="{{ path('bottle_edit', {'cellar':cellar.id, 'id': bottle.id }) }}">Edit</a>
            </div>
            <div id="actionButton" class="deleteForm">
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </div>
        </div>


        <div class="line">
            <p class="back">
                <a href="{{ path('cellar_show', {'id':cellar.id}) }}">{{ 'bottle.back_to_cellar'|trans }} <span class="red">{{ cellar.name }}</span> </a>
            </p>
        </div>

    </div>
{% endblock %}
