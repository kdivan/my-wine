{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <h1>Bottle</h1>
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bottle.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ bottle.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ bottle.description }}</td>
            </tr>
            <tr>
                <th>Vineyard</th>
                <td>{{ bottle.vineyard }}</td>
            </tr>
            <tr>
                <th>Winemaking</th>
                <td>{{ bottle.winemaking }}</td>
            </tr>
            <tr>
                <th>Buyingprice</th>
                <td>{{ bottle.buyingPrice }} {{ bottle.currency }}</td>
            </tr>
            <tr>
                <th>Vintage</th>
                <td>{{ bottle.vintage }}</td>
            </tr>
            <tr>
                <th>Capcity</th>
                <td>{{ bottle.capacity }}</td>
            </tr>
            <tr>
                <th>Bottle Type</th>
                <td>{{ bottle.bottleType.label }}</td>
            </tr>
            {% if bottle.imageName is not null %}
                <tr>
                    <th>Image</th>
                    <td><img width="auto" height="200" src="{{ asset('images/bottles/' ~ bottle.imageName) }}"></td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cellar_show', {'id':cellar.id}) }}">{{ 'bottle.back_to_cellar'|trans }}</a>
        </li>
        <li>
            <a href="{{ path('bottle_edit', {'cellar':cellar.id, 'id': bottle.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
