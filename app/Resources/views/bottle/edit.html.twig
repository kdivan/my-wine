{% extends 'AppBundle::layout.html.twig' %}

{% block body %}

<div class="content">

    <h1>Bottle edit : <span class="red">{{ bottle.name }}</span></h1>


    {{ form_start(edit_form) }}

        <div class="line">
            <div class="champForm">
                {{ form_label(edit_form.name) }}
                {{ form_widget(edit_form.name) }}
            </div>
            <div class="champForm">
                {{ form_label(edit_form.description) }}
                {{ form_widget(edit_form.description) }}
            </div>
        </div>
        <div class="line">
            <div class="champForm">
            {{ form_label(edit_form.vineyard) }}
            {{ form_widget(edit_form.vineyard) }}
            </div>
            <div class="champForm">
                {{ form_label(edit_form.winemaking) }}
                {{ form_widget(edit_form.winemaking) }}
            </div>
        </div>
        <div class="line">
            <div class="champForm">
                {{ form_label(edit_form.buyingPrice) }}
                {{ form_widget(edit_form.buyingPrice) }}
            </div>
            <div class="champForm">
                {{ form_label(edit_form.vintage) }}
                {{ form_widget(edit_form.vintage) }}
            </div>
        </div>
        <div class="line">
            <div class="champForm">
                {{ form_label(edit_form.capacity) }}
                {{ form_widget(edit_form.capacity) }}
            </div>
            <div class="champForm">
                {{ form_label(edit_form.currency) }}
                {{ form_widget(edit_form.currency) }}
            </div>
        </div>
        <div class="line">
            <div class="champForm">
                {{ form_label(edit_form.bottleType) }}
                {{ form_widget(edit_form.bottleType) }}
            </div>
            <div class="champForm">
                {{ form_label(edit_form.image_file) }}
                {{ form_widget(edit_form.image_file) }}
            </div>
        </div>

        <div class="line">
            <input type="submit" value="Edit" />
        </div>

    {{ form_end(edit_form) }}

    <div class="line">
        <p class="back">
            <a href="{{ path('bottle_show', {'cellar':cellar.id, 'id':bottle.id}) }}">{{ 'bottle.back_to_bottle'|trans }} <span class="red">{{ bottle.name }}</span> </a>
        </p>
    </div>


</div>
{% endblock %}
