{% extends 'AppBundle::layout.html.twig' %}

{% block body %}

<div class="content">

    <h1>Bottle list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Vineyard</th>
                <th>Winemaking</th>
                <th>Buyingprice</th>
                <th>Bottle type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bottle in bottles %}
            <tr>
                <td><a href="{{ path('bottle_show', {'cellar':cellar.id,'id': bottle.id }) }}">{{ bottle.id }}</a></td>
                <td>{{ bottle.name }}</td>
                <td>{{ bottle.description }}</td>
                <td>{{ bottle.vineyard }}</td>
                <td>{{ bottle.winemaking }}</td>
                <td>{{ bottle.buyingPrice }}</td>
                <td>{{ bottle.bottleType.label }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('bottle_show', {'cellar':cellar.id, 'id': bottle.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('bottle_edit', {'cellar':cellar.id, 'id': bottle.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bottle_new', {'cellar':cellar.id}) }}">Create a new entry</a>
        </li>
    </ul>


</div>
{% endblock %}
