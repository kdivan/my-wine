{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'capacity.type.edit'|trans }}</h1>

    <table>
        <thead>
            <tr>
                <th>{{ 'id'|trans }}</th>
                <th>{{ 'label'|trans }}</th>
                <th>{{ 'description'|trans }}</th>
                <th>{{ 'actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for capacityType in capacityTypes %}
            <tr>
                <td><a href="{{ path('capacitytype_show', { 'id': capacityType.id }) }}">{{ capacityType.id }}</a></td>
                <td>{{ capacityType.label }}</td>
                <td>{{ capacityType.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('capacitytype_show', { 'id': capacityType.id }) }}">{{ 'show'|trans }}</a>
                        </li>
                        <li>
                            <a href="{{ path('capacitytype_edit', { 'id': capacityType.id }) }}">{{ 'edit'|trans }}</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('capacitytype_new') }}">{{ 'create.new.entry'|trans }}</a>
        </li>
    </ul>
{% endblock %}
